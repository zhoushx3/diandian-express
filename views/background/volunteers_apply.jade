extends  ../background_layout

block content
  #backgroundVolunteersApply
   h3(style="text-align: center") 志愿者申请 
   hr
   h3.background_volunteer_apply_header 未审核
   hr
   #volunteer_unchecked
       for volunteer in volunteersApply
         .volunteer_apply_item
           li #{volunteer.username} #{volunteer.time}
             a.delete_volunteers_button.btn.btn-danger(volunteer="#{volunteer.IDCardNo}" role='button', data-toggle='modal' href='#delete_volunteers') 删除
             a.view_volunteers_apply_button.btn(volunteer="#{volunteer.IDCardNo}" href='##{volunteer.IDCardNo}', role='button', data-toggle='modal') View
           .modal.hide.fade(id= '#{volunteer.IDCardNo}' tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
             .modal-header
               button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
               h3#myViewHeader #{volunteer.username}申请表
             .modal-body
               p.field-name 姓名：
                 span #{volunteer.username}
               p.field-name 性别：
                 span #{volunteer.gender}
               p.field-name 出生年月：
                 span #{volunteer.birthYear} / #{volunteer.birthMonth}
               p.field-name 籍贯：
                 span #{volunteer.province}
               p.field-name 政治面貌：
                 span #{volunteer.politicalStatus}
               p.field-name 工作单位：
                 span #{volunteer.workUnit}
               p.field-name 职务：
                 span #{volunteer.position}
               p.field-name 身份证号：
                 span #{volunteer.IDCardNo}
               p.field-name 特长：
                 span #{volunteer.speciality}
               p.field-name 通讯地址：
                 span #{volunteer.address}
               p.field-name 邮政编码：
                 span #{volunteer.postcode}
               p.field-name 手机：
                 span #{volunteer.phone}
               p.field-name Email：
                 span #{volunteer.email}
               legend 志愿相关
               if volunteer.languages != null
                 ol 熟悉的语言：
                 for language in volunteer.languages
                   if language != 'on'
                     li #{language}
               if volunteer.vihicles != null
                 ol 拥有的交通工具：
                   for vihicle in volunteer.vihicles
                     if vihicle != "on"
                       li #{vihicle}
               if volunteer.volunteerTime != null
                 ol 希望服务时间：
                   for volunteerOpenTime in volunteer.volunteerTime
                     if volunteerOpenTime != "on"
                       li #{volunteerOpenTime}
               if volunteer.serviceManage !=  null
                 ol 愿意提供的服务：
                   for service in volunteer.serviceManage
                     if service != "on"
                       li #{service}
               if volunteer.serviceActivity != null
                 ol 大型活动：
                   for service in volunteer.serviceActivity
                     if service != "on"
                       li #{service}
               if volunteer.serviceOthers != null
                 ol 其它活动：
                   for service in volunteer.serviceOthers
                     if service != "on"
                       li #{service}
               span.field-name 工作意见与建议
                 p #{volunteer.opinions}

             .modal-footer
                 button.btn(data-dismiss='modal', aria-hidden='true') 取消
                 a.volunteer_pass_button.btn.btn-primary(volunteer ='#{volunteer.IDCardNo}') 通过 

   hr 
   h3.background_volunteer_apply_header 已审核
   hr
   #volunteer_checked
       for volunteer in volunteersPassed
         .volunteer_apply_item
           a.view_volunteers_apply_button.generalA(style="line-height: 30px" volunteer="#{volunteer.IDCardNo}" href='##{volunteer.IDCardNo}', role='button', data-toggle='modal') #{volunteer.username} #{volunteer.time}
           a.delete_volunteers_button.btn.btn-danger(volunteer="#{volunteer.IDCardNo}" role='button', data-toggle='modal' href='#delete_volunteers') 删除
           .modal.hide.fade(id= '#{volunteer.IDCardNo}' tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
