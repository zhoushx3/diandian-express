block content
  #newPosts
    h2 最近动态
    each post in posts 
      .post
        a.viewCountTracer.cover(href='/news/posts/' + post._id, style="background: url(#{post.cover}) no-repeat; background-size: 100%; background-position: center")
        .right
          h3.title
            a.viewCountTracer.generalA(href='/news/posts/' + post._id)= post.title
          h5= formatDate(post.createdAt)
          a.viewCountTracer.generalB(href='/news/posts/' + post._id)=limitString(post.content)
        .clear
    p#movePage
      a.pageBack.generalA(data-page=page, data-record=1) <<<
      - var i = 0
        while (i++ < Math.floor(record_num/4)+1)
          a.page.generalA(data-page=i)=i
      a.pageForward.generalA(data-page=page, data-record=Math.floor(record_num/4)+1) >>>
