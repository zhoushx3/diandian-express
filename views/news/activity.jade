extends  ../layout

block content
	#activity_headline
		h2 活动预告
		ul
			each item in items
				li.foreshow.viewCountTracer=item.headline
				li(style="display:none")=item._id

	#activity_content(style="background: #fff")
		each item in items
			#contents
				h2=item.headline
				p.summary="发布时间 : " + formatDate(item.create_time) + '  作者 : ' + item.author + ' 来源 : ' + item.source + '  查看次数 : ' + item.viewCount
				div
					p=item.contents
